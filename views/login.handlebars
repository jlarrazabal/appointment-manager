<div class="row">
        <div>
          <h2>Login</h2>
          <form action="/api/users/login" method="post" class="form login-form">
            <div class="form-group form-floating mb-3 col-3">
              <label for="email-login">email:</label>
              <input class="form-input form-control" type="text" id="email-login" />
            </div>
            <div class="form-group form-floating mb-3 col-3">
              <label for="password-login">password:</label>
              <input class="form-input form-control" type="password" id="password-login" />
            </div>
            <div class="form-group">
              <button class="btn btn-primary" type="submit">Login</button>
            </div>
          </form>
        </div>
        
         <p>
            <br>
            <a data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                Don't have an account? Signup here!
            </a>
         </p>
         <div class="collapse" id="collapseExample">
            <div id="signup">
                <h2>Sign up</h2>
                <form action="/api/users/signup" method="post"class="form signup-form">
                    <div class="form-group form-floating mb-3 col-3">
                      <label for="name-signup">First Name:</label>
                      <input name="first_name" class="form-input form-control" type="text" id="firstname-signup" />
                    </div>
                    <div class="form-group form-floating mb-3 col-3">
                      <label for="name-signup">Last Name:</label>
                      <input name="last_name" class="form-input form-control" type="text" id="lastname-signup" />
                    </div>
                    <div class="form-group form-floating mb-3 col-6">
                      <label for="email-signup">email:</label>
                      <input name="email" placeholder="Please enter your email" class="form-input form-control" type="text" id="email-signup" />
                    </div>
                    <div class="form-group form-floating mb-3 col-3">
                      <label for="password-signup">password:</label>
                      <input name="password" class="form-input form-control" type="password" id="password-signup" />
                    </div>
                    <div class="form-group">
                      <button class="btn btn-primary" type="submit">Signup</button>
                    </div>
                  </form>
            </div>
        </div>
    </div>

<script src="./js/login.js"></script>
